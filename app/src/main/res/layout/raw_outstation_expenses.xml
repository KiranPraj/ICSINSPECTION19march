<?xml version="1.0" encoding="utf-8"?>
<TableRow android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/date"
    android:orientation="horizontal">

    <EditText android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:background="@drawable/dropdownbackground"
        android:id="@+id/from_localtravel"
        android:paddingLeft="5dp"
        />
    <EditText android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:background="@drawable/dropdownbackground"
        android:id="@+id/to_localtravel"
        android:paddingLeft="5dp"
        />
</androidx.appcompat.widget.LinearLayoutCompat>


<androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/linearlayout_location"
    android:orientation="horizontal"
    >
    <EditText android:layout_width="120dp"
        android:paddingLeft="5dp"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:maxLines="3"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:textSize="@dimen/space15"
        android:background="@drawable/dropdownbackground"
        android:id="@+id/location"
        />
</androidx.appcompat.widget.LinearLayoutCompat>

    <EditText android:layout_width="120dp"

        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"

        android:id="@+id/expenses_boarding"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:minLines="3"
        android:maxLines="3"
        android:inputType="textMultiLine"
        />

    <EditText android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:id="@+id/igst_boarding"
        android:paddingLeft="5dp"
        />
    <EditText android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:id="@+id/cgst_boarding"

        />
    <EditText android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:id="@+id/sgst_boarding"
        android:paddingLeft="5dp"


        />
    <EditText android:layout_width="150dp"

        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:id="@+id/boarding_gst_no"
        />
    <EditText android:layout_width="120dp"
        android:background="@drawable/dropdownbackground"
        android:layout_height="wrap_content"

        android:textSize="@dimen/space15"
        android:id="@+id/boarding_service_provider"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:minLines="3"
        android:maxLines="3"
        android:inputType="textMultiLine"
        android:paddingLeft="5dp"
        />
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:background="@drawable/dropdownbackground">
    <RadioGroup
        android:id="@+id/expensesoutstation_radio_grp"
        android:layout_width="wrap_content"
        android:padding="@dimen/space5"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/r_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="@color/colorTextBlack"
            android:text="Finance"

            android:layout_marginLeft="@dimen/space10"

            />

        <RadioButton
            android:id="@+id/r_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Self"
            android:textColor="@color/colorTextBlack"
            android:layout_marginLeft="@dimen/space15"
            tools:ignore="SmallSp"/>

    </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/dropdownbackground">
    <RadioGroup
        android:id="@+id/innvoiceable_radio_grp"
        android:layout_width="wrap_content"
        android:padding="@dimen/space5"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/invoice_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="@color/colorTextBlack"
            android:text="Yes"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/space10"

            />

        <RadioButton
            android:id="@+id/invoice_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/space15"
            tools:ignore="SmallSp"/>

    </RadioGroup>
    </LinearLayout>
    <EditText android:layout_width="120dp"
        android:background="@drawable/dropdownbackground"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:textSize="@dimen/space15"
        android:id="@+id/narrration_boarding"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:minLines="3"
        android:maxLines="3"
        android:inputType="textMultiLine"
        />
    <TextView android:layout_width="120dp"
        android:background="@drawable/dropdownbackground"
        android:layout_height="wrap_content"
        android:minLines="3"
        android:hint="Choose File"
        android:gravity="center"
        android:textSize="@dimen/space15"
        android:id="@+id/chose_file_boarding"
        />
    <TextView android:layout_width="50dp"
        android:background="@drawable/dropdownbackground"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_add"
        android:paddingLeft="15dp"
        android:textSize="@dimen/space15"
        android:id="@+id/add_outstation"
        android:minLines="3"
        android:gravity="center"
        />
    <TextView android:layout_width="60dp"
        android:background="@drawable/dropdownbackground"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_delete"
        android:paddingLeft="20dp"
        android:textSize="@dimen/space15"
        android:id="@+id/delete_outstation"
        android:minLines="3"
        android:gravity="center"
        />
</TableRow>
