<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="100dp"
        android:background="@drawable/dropdownbackground"
        android:id="@+id/edit_date"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:hint="select Date"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:minLines="3"
        android:gravity="center"
        android:layout_gravity="center"

        />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:id="@+id/particular_expenses"
        android:paddingLeft="5dp"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:minLines="3"
        android:maxLines="3"
        android:inputType="textMultiLine"

        />


    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:id="@+id/total_amount"
        android:paddingLeft="5dp"
        android:minLines="3"
        android:maxLines="3"
        android:layout_gravity="center"
        android:gravity="top|start"
        />
    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:id="@+id/igst"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:paddingLeft="5dp"
        />
    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:id="@+id/cgst"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:paddingLeft="5dp"
        />
    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:id="@+id/sgst"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:paddingLeft="5dp"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:id="@+id/gst_no"
        android:minLines="3"
        android:maxLines="3"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:paddingLeft="5dp"
        />
    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dropdownbackground"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:id="@+id/service_provider"
        android:layout_gravity="center"
        android:gravity="top|start"
        android:paddingLeft="5dp"
        />
   <LinearLayout
       android:layout_width="200dp"
       android:layout_height="55dp"
       android:background="@drawable/dropdownbackground">
       <RadioGroup
           android:id="@+id/expenses_radio_grp"
           android:orientation="horizontal"
           android:layout_gravity="center"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content">
           <RadioButton
            android:id="@+id/r_first_weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="@color/colorTextBlack"
            android:text="Finance"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/space10" />

        <RadioButton
            android:id="@+id/r_second_weekly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Self"
            android:textColor="@color/colorTextBlack"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/space15"
            tools:ignore="SmallSp"/>
       </RadioGroup>
   </LinearLayout>
    <EditText android:layout_width="120dp"
      
         android:background="@drawable/dropdownbackground"
        android:layout_height="wrap_content"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:id="@+id/inv_amount"
          android:layout_gravity="center"
        android:gravity="top|start"
        android:paddingLeft="5dp"
        />
    <EditText android:layout_width="120dp"
      
         android:background="@drawable/dropdownbackground"
        android:layout_height="wrap_content"
        android:textSize="@dimen/space15"
        android:minLines="3"
        android:maxLines="3"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:id="@+id/client_no"
          android:layout_gravity="center"
        android:gravity="top|start"
        android:paddingLeft="5dp"
        />
    <TextView android:layout_width="120dp"
        android:background="@drawable/dropdownbackground"
        android:layout_height="wrap_content"
        android:hint="Choose File"
        android:textSize="@dimen/space15"
        android:id="@+id/chose_file"
        android:minLines="3"

        android:gravity="center"
        android:paddingLeft="5dp"
        />
    <TextView android:layout_width="50dp"
        android:background="@drawable/dropdownbackground"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_add"
        android:paddingLeft="15dp"
        android:textSize="@dimen/space15"
        android:id="@+id/add"
        android:minLines="3"
        android:gravity="center"
        android:textStyle="bold"
        />
    <TextView android:layout_width="60dp"
        android:background="@drawable/dropdownbackground"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_delete"
        android:paddingLeft="20dp"
        android:textSize="@dimen/space15"
        android:id="@+id/delete"
        android:textStyle="bold"
        android:minLines="3"
        android:gravity="center"
        />

</TableRow>