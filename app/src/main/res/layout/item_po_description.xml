<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="8dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_item_desc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="start"
            android:singleLine="false"
            android:textColor="@color/maroonColor"
            tools:text="Descriptions" />

        <TextView
            android:id="@+id/et_item_tot_q"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/maroonColor"
            tools:text="Total Qty." />

        <EditText
            android:id="@+id/et_item_insp_q"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Inspected Qty."
            android:inputType="numberDecimal"
            android:textColor="@color/maroonColor"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_item_released_q"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ems="10"
            android:hint="Released Qty."
            android:inputType="numberDecimal"
            android:textColor="@color/maroonColor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/et_item_rejected_q"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/maroonColor"
            tools:text="Rejected Qty." />

        <TextView
            android:id="@+id/et_item_bal_q"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/maroonColor"
            tools:text="Balance Qty." />

    </LinearLayout>
</androidx.cardview.widget.CardView>
